#!/bin/sh

# Define the menu options with emojis
options="📑 Todo\n💻 Streaming\n🔢 Calc\n⚙️ Run\n⌨️ Keyboard"

# Display the menu and get the user's choice
choice=$(echo "$options" | fuzzel -d -f monospace:size=14 -w 13 -l 5 -a center)

# Function to launch the chosen application
launch_app() {
    command -v "$1" >/dev/null 2>&1 && exec "$@" || { echo "$1 not found" >&2; exit 1; }
}

# Function to toggle the virtual keyboard (wvkbd-mobintl)
toggle_keyboard() {
    if pgrep -x "wvkbd-mobintl" > /dev/null; then
        pkill wvkbd-mobintl
    else
        wvkbd-mobintl &
    fi
}

# Check the user's choice and call the respective functions
case "$choice" in
    "⚙️ Run")
        launch_app fuzz-run
        ;;
    "💻 Streaming")
        launch_app fuzz-streaming
        ;;
    "🔢 Calc")
        launch_app fuzz-calc
        ;;
    "📑 Todo")
        launch_app fuzz-todo
        ;;
    "⌨️ Keyboard")
        toggle_keyboard
        ;;
    *)
        echo "Invalid choice: $choice" >&2
        exit 1
        ;;
esac
